apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: {{ service_name }}-staging
resources:
- ../../../base
namePrefix: {{ service_name }}-
commonLabels:
  app.kubernetes.io/name: {{ service_name }}
  app.kubernetes.io/instance: {{ service_name }}-staging
  environment: staging
images:
- name: quay.io/{{ org }}/app
  newName: quay.io/{{ org }}/{{ service_name }}
  newTag: {{ staging_image_tag }}
replicas:
- name: app
  count: 2
patches:
- patch: |-
    - op: replace
      path: /spec/template/spec/containers/0/resources/requests/memory
      value: "64Mi"
    - op: replace
      path: /spec/template/spec/containers/0/resources/requests/cpu
      value: "100m"
    - op: replace
      path: /spec/template/spec/containers/0/resources/limits/memory
      value: "128Mi"
    - op: replace
      path: /spec/template/spec/containers/0/resources/limits/cpu
      value: "250m"
  target:
    kind: Deployment
- patch: |-
    - op: replace
      path: /spec/rules/0/host
      value: {{ service_name }}.stg.{{ domain_suffix }}
  target:
    kind: Ingress
